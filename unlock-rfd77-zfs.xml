<?xml version='1.0'?>
<!DOCTYPE service_bundle SYSTEM '/usr/share/lib/xml/dtd/service_bundle.dtd.1'>
<service_bundle type='manifest' name='export'>
  <service name='system/filesystem/unlock-rfd77-zfs' type='service' version='0'>
    <create_default_instance enabled='true'/>
    <single_instance/>
    <dependency name='pcscd' grouping='require_all' restart_on='error' type='service'>
      <service_fmri value='svc:/system/pcscd:default'/>
    </dependency>
    <dependency name='fs-joyent' grouping='require_all' restart_on='error' type='service'>
      <service_fmri value='svc:/system/filesystem/smartdc:default'/>
    </dependency>
    <dependent name='fs-local' grouping='require_all' restart_on='error'>
      <service_fmri value='svc:/system/filesystem/local:default'/>
    </dependent>
    <exec_method name='start' type='method' exec='/lib/svc/method/unlock-rfd77-zfs' timeout_seconds='600'>
      <method_context working_directory='/tmp'/>
    </exec_method>
    <exec_method name='stop' type='method' exec=':kill' timeout_seconds='60'>
      <method_context working_directory='/tmp'/>
    </exec_method>
    <property_group name='startd' type='framework'>
      <propval name='duration' type='astring' value='transient' />
    </property_group>
    <template>
      <common_name>
        <loctext xml:lang='C'>Unlock encrypted filesystems using rfd77 keys</loctext>
      </common_name>
    </template>
  </service>
</service_bundle>
