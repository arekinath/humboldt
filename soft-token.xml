<?xml version='1.0'?>
<!DOCTYPE service_bundle SYSTEM '/usr/share/lib/xml/dtd/service_bundle.dtd.1'>
<service_bundle type='manifest' name='export'>
  <service name='system/soft-token' type='service' version='0'>
    <create_default_instance enabled='true'/>
    <single_instance/>
    <dependency name='dep0' grouping='require_all' restart_on='error' type='service'>
      <service_fmri value='svc:/system/filesystem/local'/>
    </dependency>
    <exec_method name='start' type='method' exec='/smartdc/bin/softtokend &amp;' timeout_seconds='0'>
      <method_context working_directory='/tmp'/>
    </exec_method>
    <exec_method name='stop' type='method' exec=':kill' timeout_seconds='60'>
      <method_context working_directory='/tmp'/>
    </exec_method>
    <template>
      <common_name>
        <loctext xml:lang='C'>RFD77 zone soft token</loctext>
      </common_name>
    </template>
  </service>
</service_bundle>
